  <script>
      function toggleOffcanvas() {
          var offcanvasElement = document.getElementById('offcanvas');
          var offcanvas = new bootstrap.Offcanvas(offcanvasElement);

          if (offcanvasElement.classList.contains('show')) {
              offcanvas.hide();
          } else {
              offcanvas.show();
          }
      }
